<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E2000000"
    tools:context="com.gama.task.ui.fragments.payment.FragmentWayCheckout"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="2"
        android:layout_margin="@dimen/_10sdp">

        <ImageButton
            android:id="@+id/post_balance"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/checkout3"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/bank_card"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/checkout4"
            android:layout_weight="1"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>