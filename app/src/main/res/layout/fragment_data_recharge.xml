<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="java.util.concurrent.TimeUnit" />

        <import type="androidx.lifecycle.LiveData" />

        <import type="androidx.lifecycle.MutableLiveData" />

        <variable
            name="requests1"
            type="com.gama.task.models.Accounts" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bq_w"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:layout_margin="@dimen/_20sdp"
                android:textAlignment="viewStart"
                android:text="@string/data_recharge_main"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/gradle" />

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

        </LinearLayout>

<!--        <View-->

<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="4dp"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:layout_marginLeft="60dp"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:layout_marginRight="60dp"-->
<!--            android:layout_marginBottom="20dp"-->
<!--            android:background="#FFFFFF" />-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="4dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/line"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="horizontal"

                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/mobily_card"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginRight="-10dp"
                        android:layout_weight="1"
                        android:background="@drawable/mobily_selector"
                        android:clickable="true"
                        android:focusable="true" />

                    <ImageView
                        android:id="@+id/stc_card"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="1"
                        android:background="@drawable/stc_selector"
                        android:clickable="true"
                        android:focusable="true" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="-30dp"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/zain_card"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginRight="-10dp"
                        android:layout_weight="1"
                        android:background="@drawable/zain_selector"
                        android:clickable="true"
                        android:focusable="true" />

                    <ImageView
                        android:id="@+id/virgin_card"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="1"
                        android:background="@drawable/virgini_selector"
                        android:clickable="true"
                        android:focusable="true" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="-30dp"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/lebara_card"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginRight="-10dp"
                        android:layout_weight="1"
                        android:background="@drawable/lebara_selector"
                        android:clickable="true"
                        android:focusable="true" />

                    <ImageView
                        android:id="@+id/friend_card"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="1"
                        android:background="@drawable/friendi_selector"
                        android:clickable="true"
                        android:focusable="true" />


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>