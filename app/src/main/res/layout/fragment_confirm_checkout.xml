<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#252525"
    android:orientation="horizontal"
    tools:context="com.gama.task.ui.fragments.payment.Fragmentcheckout1"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/confirmcheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:background="@drawable/card_back_friendi"
                android:src="@drawable/card_back_friendi"
                android:padding="@dimen/_45sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:text="@string/confirm_checkout"
                android:textStyle="bold"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:background="@drawable/bg_rounded_gray"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_more_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:background="@drawable/card_back_friendi"
                android:src="@drawable/shahid_vip"
                android:padding="@dimen/_45sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:text="@string/add_more_cards"
                android:textStyle="bold"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:background="@drawable/bg_rounded_gray"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>