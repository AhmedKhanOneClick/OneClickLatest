<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/splash_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_AFAFAF</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog1</item>
    </style>

    <!-- overrided in  v23-->
    <style name="AppTheme.statusBarLight">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_img</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AuthTheme" parent="AppTheme.statusBarLight">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <!-- overrided in  v23-->
    <style name="MainTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/splash_color</item>
        <item name="colorPrimaryDark">@color/color_EFEFEF</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="clickable_view">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="clickable_view_borderless" parent="clickable_view">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="clickable_view_foreground" parent="clickable_view">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@null</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up_with_fade_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_with_fade_out</item>
    </style>

    <style name="TextInputLayout.TransparentWithHint" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@null</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextInputLayout.RoundedWhiteWithoutHint" parent="TextInputLayout.TransparentWithHint">
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/x10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/x10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/x10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/x10dp</item>
        <item name="materialThemeOverlay">@style/OverlayFilledPadding</item>
    </style>

    <style name="OverlayFilledPadding">
        <item name="editTextStyle">@style/FilledBox_padding</item>
    </style>

    <style name="FilledBox_padding" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <!-- top and bottom padding -->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="country_phone_code_picker">
        <item name="ccpDialog_showNameCode">true</item>
        <item name="ccpDialog_showPhoneCode">true</item>
        <item name="ccp_autoDetectCountry">true</item>
        <item name="ccp_autoFormatNumber">false</item>
        <item name="ccp_countryPreference">sa</item>
        <item name="ccp_defaultNameCode">sa</item>
        <item name="ccp_hintExampleNumber">false</item>
        <item name="ccp_showNameCode">true</item>
        <item name="ccp_showPhoneCode">true</item>
        <item name="ccp_excludedCountries">il
        </item> <!-- exclude the fake country that called israel-->
    </style>

    <style name="TabsTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <!--        <item name="android:textColor"></item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="checkBoxTheme" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorSecondary">@color/color_2e3540</item>
    </style>

    <style name="RoundedBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>


    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/radius_default</item>
        <item name="cornerSizeTopLeft">@dimen/radius_default</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="DialogFullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>


    </style>

    <!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <!--        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->
    <!--    </style>-->

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_rounded_bg</item>
    </style>


    <style name="CustomBottomSheetDialog1" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet1</item>
    </style>

    <style name="CustomBottomSheet1" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog1</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog1" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#747474</item>
        <item name="colorControlActivated">#27c867</item>
        <item name="colorControlHighlight">#27c867</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="txt_lang_side_menu">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>


</resources>